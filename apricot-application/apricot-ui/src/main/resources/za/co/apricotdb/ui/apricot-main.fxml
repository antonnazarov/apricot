<AnchorPane fx:id="mainPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="za.co.apricotdb.ui.MainAppController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox id="mainBox">
               <children>
                  <MenuBar id="mainMenu" prefHeight="35.0" prefWidth="292.0">
                    <menus>
                      <Menu id="menuProject" mnemonicParsing="false" text="Project">
                        <items>
                          <MenuItem mnemonicParsing="false" onAction="#newProject" text="New                     " />
                              <MenuItem id="menuOpen" mnemonicParsing="false" onAction="#openProject" text="Open" />
                              <MenuItem id="menuEdit" mnemonicParsing="false" onAction="#editProject" text="Edit" />
                              <MenuItem disable="true" mnemonicParsing="false" text="Export" />
                              <MenuItem disable="true" mnemonicParsing="false" text="Import" />
                              <MenuItem id="menuDelete" mnemonicParsing="false" onAction="#deleteProject" text="Delete" />
                        </items>
                      </Menu>
                      <Menu disable="true" mnemonicParsing="false" text="Edit">
                        <items>
                          <MenuItem mnemonicParsing="false" text="Select All (Ctrl+A)" />
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <Menu mnemonicParsing="false" text="Align Selected">
                                <items>
                                  <MenuItem mnemonicParsing="false" text="Left (Ctrl+Left)" />
                                    <MenuItem mnemonicParsing="false" text="Right (Ctrl+Right)" />
                                    <MenuItem mnemonicParsing="false" text="Top (Ctrl+Up)" />
                                    <MenuItem mnemonicParsing="false" text="Bottom (Ctrl+Down)" />
                                    <MenuItem mnemonicParsing="false" text="Width (Ctrl+Shift+Right)" />
                                </items>
                              </Menu>
                        </items>
                      </Menu>
                        <Menu id="menuOperations" mnemonicParsing="false" text="Operations">
                           <items>
                              <MenuItem mnemonicParsing="false" onAction="#reverseEngineer" text="Reverse Engineering" />
                              <MenuItem disable="true" mnemonicParsing="false" text="Compare Snapshots" />
                              <MenuItem mnemonicParsing="false" onAction="#createExcelReport" text="Excel Report" />
                              <Menu mnemonicParsing="false" text="Scripts">
                                <items>
                                  <MenuItem mnemonicParsing="false" onAction="#generateCreateScript" text="Generate &quot;Create&quot; Script" />
                                    <MenuItem mnemonicParsing="false" onAction="#generateDropScript" text="Generate &quot;Drop&quot; Script" />
                                    <MenuItem mnemonicParsing="false" onAction="#generateDeleteScript" text="Generate &quot;Delete&quot; Script" />
                                </items>
                              </Menu>
                              <MenuItem disable="true" mnemonicParsing="false" text="Print Diagram" />
                           </items>
                        </Menu>
                      <Menu mnemonicParsing="false" text="Help">
                        <items>
                          <MenuItem mnemonicParsing="false" onAction="#about" text="About Apricot DB" />
                              <MenuItem mnemonicParsing="false" onAction="#usersGuide" text="User's Guide" />
                        </items>
                      </Menu>
                      <Menu id="menuSnapshot" mnemonicParsing="false" text="Snapshot:">
                        <items>
                          <MenuItem mnemonicParsing="false" onAction="#editSnapshot" text="Edit" />
                              <MenuItem mnemonicParsing="false" onAction="#deleteSnapshot" text="Delete             " />
                        </items>
                      </Menu>
                    </menus>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </MenuBar>
                  <ComboBox id="snapshot_dropdown" fx:id="snapshotCombo" onAction="#selectSnapshot" prefWidth="250.0">
                     <HBox.margin>
                        <Insets top="6.0" />
                     </HBox.margin>
                  </ComboBox>
                  <ButtonBar id="mainButtons" nodeOrientation="LEFT_TO_RIGHT" prefHeight="25.0" prefWidth="681.0">
                    <buttons>
                        <Button id="buttonSave" fx:id="saveButton" minWidth="34.0" mnemonicParsing="false" onAction="#save" prefHeight="25.0" text="Save" />
                      <Button fx:id="undoButton" disable="true" minWidth="34.0" mnemonicParsing="false" onAction="#undo" prefHeight="25.0" text="Undo" />
                        <Label alignment="CENTER_RIGHT" minWidth="27.0" prefHeight="17.0" text="New:" />
                        <Button id="buttonSnapshot" layoutX="455.0" layoutY="10.0" minWidth="34.0" mnemonicParsing="false" onAction="#newSnapshot" prefHeight="25.0" text="Snapshot" />
                        <Button id="buttonView" layoutX="540.0" layoutY="10.0" minWidth="34.0" mnemonicParsing="false" onAction="#newView" prefHeight="25.0" text="View" />
                        <Button minWidth="34.0" mnemonicParsing="false" onAction="#newEntity" prefHeight="25.0" text="Entity" />
                        <Button minWidth="50.0" mnemonicParsing="false" onAction="#newRelationship" prefHeight="25.0" text="Relationship" />
                    </buttons>
                     <HBox.margin>
                        <Insets bottom="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </ButtonBar>
                  <Label alignment="CENTER_RIGHT" minWidth="44.0" prefHeight="17.0" text="Scale:">
                     <HBox.margin>
                        <Insets left="10.0" right="5.0" top="9.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="scale" onAction="#setScale" prefHeight="25.0" prefWidth="72.0">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
               <padding>
                  <Insets right="10.0" />
               </padding>
            </HBox>
            <SplitPane dividerPositions="0.2" VBox.vgrow="ALWAYS">
              <items>
                  <TreeView fx:id="projectsTreeView" maxHeight="1.7976931348623157E308" SplitPane.resizableWithParent="false" />
                  <TabPane fx:id="viewsTabPane" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                      <Tab text="Main View" />
                    </tabs>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </TabPane>
              </items>
            </SplitPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
